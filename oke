pragma solidity ^0.8.30;

import "@openzeppelin/contracts/token/ERC20/extensions/ERC20Capped.sol";
import "@openzeppelin/contracts/access/Ownable.sol";

contract MoolahCoin is ERC20Capped, Ownable {
    constructor()
        ERC20("Moolah Coin", "MC")                       // Tên token + ký hiệu
        ERC20Capped(10_000_000_000 * 10 ** decimals())   // Tổng cung = 10 tỷ token
    {
        // Mint sẵn 1 triệu token cho người deploy
        _mint(msg.sender, 1_000_000 * 10 ** decimals());
    }

    // Hàm mint thêm token (chỉ Owner được quyền)
    function mint(address to, uint256 amount) public onlyOwner {
        _mint(to, amount);
    }
}
